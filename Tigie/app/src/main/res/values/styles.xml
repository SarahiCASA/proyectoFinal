<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="styleChapter" parent="Theme.AppCompat.Light">
        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="styleChapterDescr" parent="Theme.AppCompat.Light">
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="styleCode" parent="Theme.AppCompat.Light">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="styleCode1" parent="Theme.AppCompat.Light">
        <item name="android:textColor">@color/colorPrimaryDark4</item>
    </style>

    <style name="styleCode2" parent="Theme.AppCompat.Light">
        <item name="android:textColor">@color/colorVerde</item>
    </style>

    <style name="styleChapitulo" parent="Theme.AppCompat.Light">
        <item name="android:textColor">@color/colorVerde</item>
    </style>


    <style name="styleChapituloCode" parent="Theme.AppCompat.Light">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="styleChapituloDescr" parent="Theme.AppCompat.Light">
        <item name="android:textColor">@color/colorAzul</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="Botones" parent="Theme.AppCompat.Light">
        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="colorControlHighlight">#ffffff</item>
        <item name="android:textColor">#fff</item>
    </style>

</resources>
